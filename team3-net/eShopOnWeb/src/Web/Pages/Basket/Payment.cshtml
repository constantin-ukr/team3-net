@page
@model PaymentModel
@{
}
<form asp-page="Payment" method="post">
    <div>
        <div class="alert alert-danger" role="alert">    
        @Request.Query.FirstOrDefault(x=>x.Key=="Error").Value   
        </div> 
        <h4>CardNumber: <input type="text" name="cardNumber" pattern="[0-9]{4}\s[0-9]{4}\s[0-9]{4}\s[0-9]{4}" required/> </h4>
        <h4>Date of Expire <input type="number" name="month" min="1" max="12" required/>/<input type="number" name="year" min="1" max="99" required/></h4>
        <h4>CVC: <input type="number" name="cvc" min="100" max="999" required/></h4>
        <section class="esh-basket-item col-xs-push-7 col-xs-4 text-right">
            <input type="submit" class="btn esh-basket-checkout" value="[ Pay ]" />
        </section>
    </div>
</form>

